{{> header}}


<div class="user-page-container">

  {{> usermenu}}

  <div class="tab-content">
    <div class="content-header">Kívánságlista</div>
    <div class="wish-container">

      {{#each wishlist}}
      <div class="wishItem cartItem" data-id="{{id}}">
        <div class="col">
          <div class="row imageRow">
            <img src="/images/products/{{kep1}}" />
          </div>
        </div>
        <div class="col dataCol">
          <div class="row">
            <div class="name">{{gyarto}} {{termek}}</div>
          </div>
          <div class="row">
            <div class="shipping">
              <i class="material-icons">local_shipping</i>{{allapot}}</div>
          </div>
          <div class="row">
            <div class="price">{{#if akcios_ar}}{{numberFormat akcios_ar}}{{else}}{{numberFormat ar}}{{/if}}
              <span class="money">Ft</span>
            </div>
          </div>
        </div>
        <div class="col">
          <div class="row">
          </div>
        </div>
        <div class="col">
          <div class="row">
            <div class="removeFromWish">
              <i class="material-icons clickEffect"></i>
            </div>
          </div>
        </div>
      </div>
      {{/each}}


    </div>

    <div class="cartMessage {{#unless wishlist}}show{{/unless}}">
      <div class="text">A kívánságlistád még üres</div>
      <i class="material-icons">highlight_off</i>
      <a class="btn-1" href="/products">Tovább a termékekhez</a>
    </div>

  </div>
</div>


<script type="text/javascript" src="/javascripts/user.bundle.js"></script>


{{> footer}}