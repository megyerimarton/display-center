{{> header}}

<div class="user-page-container admin-page-container">

  {{> adminmenu}}

  <div class="tab-content">
    <div class="content-header">
      <div class="title">Hírek</div>
      <div class="link"></div>
    </div>
    <div class="lines-container">

      {{#each news}}
      <div class="line" data-id="{{id}}">
        <div class="box w-30">
          <span class="bold">{{id}}&nbsp&nbsp&nbsp</span>
          <p>{{cim}}</p>
        </div>
        <div class="box w-20">
          <p>{{szerzo}}</p>
        </div>
        <div class="box w-20">
          <p>{{dateFormat datum}}</p>
        </div>
        <div class="box w-20">
          {{#is aktiv 1}}
          <i class="material-icons status status-accepted">info</i>
          <p>Aktív
            <p>{{/is}} {{#is aktiv 0}}
              <i class="material-icons status status-process">info</i>
              <p>Inaktív
                <p>{{/is}}
        </div>
        <div class="box w-10">
          <a class="btn-actions" tooltip="Módosítás" href="/admin/news/upload/{{id}}">
            <i class="material-icons">mode_edit</i>
          </a>
          {{#is aktiv 1}}
          <a class="btn-actions archive" data-id="{{../id}}" tooltip="Hír inaktiválása">
            <i class="material-icons">archive</i>
          </a>{{/is}} {{#is aktiv 0}}
          <a class="btn-actions unarchive" data-id="{{../id}}" tooltip="Hír aktiválása">
            <i class="material-icons">unarchive</i>
          </a>{{/is}}
          <a class="btn-actions delete" data-id="{{id}}" tooltip="Hír törlése">
            <i class="material-icons">clear</i>
          </a>
        </div>
      </div>
      {{/each}}

      {{#if news}}
      <div class="pagination">

        <a href="/admin/news{{queryTransform query (add 'p=' pagination.prev)}}" class="prev {{#unless pagination.prev}}inactive{{/unless}}">
          <i class="material-icons">keyboard_arrow_left</i>
        </a>

        <a href="/admin/news{{queryTransform query (add 'p=' pagination.next)}}" class="next {{#unless pagination.next}}inactive{{/unless}}">
          <i class="material-icons">keyboard_arrow_right</i>
        </a>

        <div class="pagination-pages">
          <input type="number" name="p" value="{{pagination.actual}}" class="pagination-pages-input">
          <span class="pagination-pages-separator">/</span>
          <span class="pagination-pages-all">{{pagination.pages}}</span>
        </div>

      </div>
      {{/if}}

    </div>
  </div>
</div>


<script type="text/javascript" src="/javascripts/adminNews.bundle.js"></script> {{> footer}}